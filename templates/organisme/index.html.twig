{% extends 'base.html.twig' %}

{% block title %}Organisme index{% endblock %}

{% block body %}
    <h1>Organisme </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Numero_tel</th>
                <th>Email_contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organisme in organismes %}
            <tr>
                <td>{{ organisme.id }}</td>
                <td>{{ organisme.nom }}</td>
                <td>{{ organisme.adresse }}</td>
                <td>{{ organisme.numeroTel }}</td>
                <td>{{ organisme.emailContact }}</td>
                <td>
                    <a href="{{ path('app_organisme_show', {'id': organisme.id}) }}" class="button button-outline"><i class="fa-solid fa-eye"></i>voir</a>
                    <a href="{{ path('app_organisme_edit', {'id': organisme.id}) }}" class="button"><i class="fa-solid fa-pen-to-square"></i>modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_organisme_new') }}">Ajouter</a>
{% endblock %}

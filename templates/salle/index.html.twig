{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <h1>Salle </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.nom }}</td>
                <td>
                    <a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="button button-outline"><i class="fa-solid fa-eye"></i>voir</a>
                    <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="button"><i class="fa-solid fa-pen-to-square"></i>modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salle_new') }}">Ajouter</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <h1>Formation </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.intitule }}</td>
                <td>
                    <a href="{{ path('app_formation_show', {'id': formation.id}) }}" class="button button-outline"><i class="fa-solid fa-eye"></i>voir</a>
                    <a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="button"><i class="fa-solid fa-pen-to-square"></i>modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_formation_new') }}">Ajouter</a>
{% endblock %}
